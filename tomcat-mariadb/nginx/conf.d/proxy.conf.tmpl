# 업스트림 백엔드 서버명과 포트 모두 .env에서 제어 가능

upstream ${UPSTREAM_TOMCAT} {
    server tomcat:${TOMCAT_HTTP_PORT};
    keepalive 32;
}

upstream ${UPSTREAM_RELAY} {
    server certRelay:${RELAY_HTTP_PORT};
    keepalive 32;
}

server {
    listen 80;
    server_name _;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name ${WIZERA_HOST};

    ssl_certificate     /etc/nginx/certs/fullchain.pem;
    ssl_certificate_key /etc/nginx/certs/privkey.pem;

    # Tomcat으로 프록시
    location /wizvera/ {
        proxy_pass http://${UPSTREAM_TOMCAT};
        proxy_http_version 1.1;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # certRelay로 프록시
    location /certRelay/ {
        proxy_pass http://${UPSTREAM_RELAY};
        proxy_http_version 1.1;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 그 외 기본 라우트도 certRelay로
    location / {
        proxy_pass http://${UPSTREAM_RELAY};
        proxy_http_version 1.1;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
